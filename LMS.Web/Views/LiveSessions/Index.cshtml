@model IEnumerable<LMS.Repository.Models.LiveSession>

@{
    ViewData["Title"] = "Live Sessions";
}

<div class="container-fluid">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold">📡 Live Sessions</h2>
            <p class="text-muted mb-0">
                Manage scheduled and completed live lectures
            </p>
        </div>

        <a asp-action="Create"
           asp-route-courseId="@ViewBag.CourseId"
           class="btn btn-primary">
            ➕ Schedule Live Lecture
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">

            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Title</th>
                        <th>Start Time</th>
                        <th>Duration</th>
                        <th>Status</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">
                                No live sessions scheduled yet.
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var session in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@session.Title</strong>
                                </td>

                                <td>
                                    @session.StartTime.ToString("dd MMM yyyy, hh:mm tt")
                                </td>

                                <td>
                                    @session.DurationMinutes min
                                </td>

                                <td>
                                    <span class="badge bg-secondary">
                                        @session.Status
                                    </span>
                                </td>

                                <td class="text-end">

                                    @if (session.Status == "Scheduled")
                                    {
                                        <a href="@session.StartUrl"
                                           class="btn btn-sm btn-success">
                                            ▶ Start
                                        </a>
                                    }
                                    else if (session.Status == "Ended")
                                    {
                                        <a href="@session.JoinUrl"
                                           class="btn btn-sm btn-outline-secondary">
                                            View
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }

                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

        </div>
    </div>

</div>
