@model IEnumerable<LMS.Repository.Models.Course>

@{
    ViewData["Title"] = "Courses";
}

<h2 class="mb-4 text-primary fw-bold">📚 Courses</h2>

<p>
    <a asp-action="Create" class="btn btn-primary mb-4 shadow">
        + Create New Course
    </a>
</p>

<style>
    body {
        background: #f4f7fb;
    }

    .course-card {
        background: linear-gradient(145deg, #ffffff, #eef2ff);
        border: none;
        border-radius: 16px;
        transition: all 0.35s ease;
        overflow: hidden;
    }

        .course-card:hover {
            transform: translateY(-8px) scale(1.01);
            box-shadow: 0 15px 35px rgba(99, 102, 241, 0.25);
        }

    .card-header-custom {
        background: linear-gradient(90deg, #6366f1, #4f46e5);
        color: white;
        padding: 12px 16px;
        font-weight: 600;
        letter-spacing: 0.5px;
    }

    .course-desc {
        color: #4b5563;
        font-size: 0.95rem;
    }

    .instructor-badge {
        background: #e0e7ff;
        color: #3730a3;
        padding: 6px 10px;
        border-radius: 8px;
        font-size: 0.85rem;
        display: inline-block;
        margin-top: 8px;
    }

    .card-footer-custom {
        background: #f9fafb;
        border-top: none;
    }
</style>

<div class="row">
    @foreach (var course in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card course-card h-100">

                <!-- Header Strip -->
                <div class="card-header-custom">
                    @course.CourseTitle
                </div>

                <div class="card-body">
                    <p class="course-desc">
                        @course.Description
                    </p>

                    <span class="instructor-badge">
                        👨‍🏫 @course.Instructor?.FullName
                    </span>
                </div>

                <div class="card-footer card-footer-custom d-flex justify-content-between px-3 pb-3">
                    <a asp-action="Edit"
                       asp-route-id="@course.CourseId"
                       class="btn btn-sm btn-outline-warning">
                        ✏️ Edit
                    </a>

                    <a asp-action="Delete"
                       asp-route-id="@course.CourseId"
                       class="btn btn-sm btn-outline-danger"
                       onclick="return confirm('Are you sure you want to delete this course?');">
                        🗑️ Delete
                    </a>
                </div>
            </div>
        </div>
    }
</div>
