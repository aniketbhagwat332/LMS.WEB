@model LMS.Repository.Models.Course

@{
    ViewData["Title"] = "Create Course";
}

<style>
    body {
        background: #f4f7fb;
    }

    h2 {
        font-weight: 700;
        color: #4f46e5;
        margin-bottom: 20px;
        animation: fadeDown 0.6s ease;
    }

    .form-wrapper {
        animation: fadeUp 0.7s ease;
        max-width: 650px;
    }

    .form-label {
        font-weight: 600;
        color: #374151;
    }

    .form-control {
        border-radius: 10px;
        border: 1px solid #d1d5db;
        padding: 10px 12px;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #6366f1;
            box-shadow: 0 0 0 0.2rem rgba(99, 102, 241, 0.25);
            transform: scale(1.01);
        }

    .btn-save {
        background: linear-gradient(90deg, #22c55e, #16a34a);
        border: none;
        border-radius: 10px;
        padding: 10px 26px;
        font-weight: 600;
        color: #fff;
        transition: all 0.3s ease;
    }

        .btn-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 18px rgba(34, 197, 94, 0.4);
            color: #fff;
        }

    .btn-back {
        border-radius: 10px;
        padding: 10px 22px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-back:hover {
            transform: translateY(-2px);
        }

    /* Animations */
    @@keyframes fadeUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeDown {
        from {
            opacity: 0;
            transform: translateY(-15px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<h2>Create Course</h2>

<div class="form-wrapper">
    <form asp-action="Create" method="post">

        <div class="mb-3">
            <label asp-for="CourseTitle" class="form-label"></label>
            <input asp-for="CourseTitle" class="form-control"
                   placeholder="Enter course title" />
            <span asp-validation-for="CourseTitle" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control"
                      rows="4"
                      placeholder="Enter course description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Instructor" class="form-label"></label>
            <select asp-for="InstructorId"
                    asp-items="ViewBag.Instructors"
                    class="form-control">
                <option value="">-- Select Instructor --</option>
            </select>
            <span asp-validation-for="InstructorId" class="text-danger"></span>
        </div>

        <div class="d-flex gap-3">
            <button type="submit" class="btn btn-save">
                💾 Save
            </button>

            <a asp-action="Index" class="btn btn-outline-secondary btn-back">
                ⬅ Back
            </a>
        </div>

    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
