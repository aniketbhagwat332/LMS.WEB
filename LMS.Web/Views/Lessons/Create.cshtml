@model LMS.Repository.Models.Lesson

<h2>Add Lesson</h2>

<form method="post">
    <input type="hidden" asp-for="CourseId" />

    <div class="mb-2">
        <label asp-for="LessonTitle"></label>
        <input asp-for="LessonTitle" class="form-control" />
        <span asp-validation-for="LessonTitle" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label asp-for="OrderNo"></label>
        <input asp-for="OrderNo" class="form-control" />
        <span asp-validation-for="OrderNo" class="text-danger"></span>
    </div>

    <button class="btn btn-success">Save</button>
    <a asp-action="Index" asp-route-courseId="@Model.CourseId" class="btn btn-secondary">Back</a>
</form>
