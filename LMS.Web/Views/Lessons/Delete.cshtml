@model LMS.Repository.Models.Lesson

@{
    ViewData["Title"] = "Delete Lesson";
}

<h2>Delete Lesson</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this lesson?
</div>

<div class="mb-3">
    <strong>Lesson Title:</strong> @Model.LessonTitle
</div>

<div class="mb-3">
    <strong>Order No:</strong> @Model.OrderNo
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="LessonId" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index"
       asp-route-courseId="@Model.CourseId"
       class="btn btn-secondary">
        Cancel
    </a>
</form>
