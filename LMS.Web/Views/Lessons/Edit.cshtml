@model LMS.Repository.Models.Lesson

@{
    ViewData["Title"] = "Edit Lesson";
}

<h2>Edit Lesson</h2>

<form asp-action="Edit" method="post">
    @* Hidden keys *@
    <input type="hidden" asp-for="LessonId" />
    <input type="hidden" asp-for="CourseId" />

    <div class="mb-3">
        <label asp-for="LessonTitle" class="form-label"></label>
        <input asp-for="LessonTitle" class="form-control" />
        <span asp-validation-for="LessonTitle" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="OrderNo" class="form-label"></label>
        <input asp-for="OrderNo" class="form-control" />
        <span asp-validation-for="OrderNo" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index"
       asp-route-courseId="@Model.CourseId"
       class="btn btn-secondary">
        Back
    </a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
